<h1>Recent Posts</h1>
<h3><a class="btn btn-success" href="/posts/add">New Post</a></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% posts.each do |post| %>
    <tr>
      <td><a href="/posts/<%= post["_id"] %>"><%= post["author"] %></a></td>
      <td><a href="/posts/<%= post["_id"] %>"><%= post["title"] %></a></td>
      <td>
      	<form action="/posts/delete/<%= post["_id"] %>" method="post">
      	<a class="btn" href="/posts/edit/<%= post["_id"] %>">Edit</a>
      	&nbsp;
      	<input type="submit" class="btn btn-danger" value="Remove"></input>
      	</form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>